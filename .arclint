{
  "exclude": [
    "(^vendor/)"
  ],
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "type": "filename"
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "php": {
      "type": "php",
      "include": "(\\.php$)"
    },
    "phpcs": {
      "type": "phpcs",
      "bin": "vendor/bin/phpcs",
      "phpcs.standard": "phpcs.xml",
      "include": [
        "(^src/.*\\.php$)",
        "(^tests/.*\\.php$)"
      ]
    },
    "spelling": {
      "type": "spelling"
    }
  }
}
